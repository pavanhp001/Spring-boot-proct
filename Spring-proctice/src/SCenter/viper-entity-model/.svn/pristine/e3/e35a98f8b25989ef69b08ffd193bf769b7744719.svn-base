<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="cacheData">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/cacheDataDatasource</jta-data-source>
		<jar-file>/</jar-file>
		<class>com.A.V.beans.entity.BusinessParty</class>
		<class>com.A.V.beans.entity.AddressBean</class>
		<class>com.A.V.beans.entity.AgentBean</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="update" /> -->
			<property name="hibernate.hbm2ddl.auto" value="none" /> 
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="jboss.entity.manager.factory.jndi.name"
				value="java:/cacheDataEntityManagerFactory" />
			<property name="jboss.entity.mananger.jndi.name"
				value="java:/cacheDataEntityManager" />
		</properties>
	</persistence-unit>
</persistence>