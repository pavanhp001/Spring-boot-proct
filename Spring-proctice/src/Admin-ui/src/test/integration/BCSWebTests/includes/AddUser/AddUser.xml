<invoke url="/admin/adminUserAdd.form" description="Go to Add User page"/>
<verifyTitle text="${admin.add.user}" description="Add User page Title should be seen"/>

<setSelectField description="set user role" htmlId="roleSelect" value="INT"/>
<setInputField description="set username" htmlId="username" value="CANOOTESTUSER"/>
<setInputField description="set given name" htmlId="forename" value="CANOO"/>
